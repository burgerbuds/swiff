{
    "name": "swiff",
    "version": "1.2.0",
    "description": "Swiff saves you time with common SSH tasks during the development of websites/apps",
    "main": "index.js",
    "scripts": {
        "start": "node dist/index.js",
        "dev": "nodemon -q --no-stdin --ignore dist --exec babel-node --ignore swiff.config.js src",
        "format": "prettier --write --ignore-path .gitignore {src,.}/*.js",
        "build": "babel src --out-dir dist",
        "prepublish": "babel src --out-dir dist",
        "test": "ava"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/simple-integrated-marketing/swiff.git"
    },
    "keywords": [
        "developer-tools",
        "development-environment",
        "web-tools",
        "command-line-tool",
        "command-line-app",
        "staging-tool"
    ],
    "bugs": {
        "url": "https://github.com/simple-integrated-marketing/swiff/issues"
    },
    "homepage": "https://github.com/simple-integrated-marketing/swiff#readme",
    "prettier": {
        "trailingComma": "es5",
        "useTabs": false,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "author": "",
    "license": "ISC",
    "bin": {
        "swiff": "dist/index.js"
    },
    "dependencies": {
        "chalk": "^2.4.2",
        "dotenv": "^6.2.0",
        "fs-extra": "^7.0.1",
        "import-jsx": "^1.3.0",
        "ink": "^0.5.1",
        "ink-select-input": "^2.0.0",
        "ink-spinner": "^2.0.0",
        "lodash": "^4.17.11",
        "meow": "^5.0.0",
        "node-cmd": "^3.0.0",
        "node-ssh": "^5.1.2",
        "nodemon": "^1.18.11",
        "promise-mysql": "^3.3.1",
        "ssh2": "^0.7.1",
        "universal-analytics": "^0.4.20",
        "update-notifier": "^2.5.0",
        "username": "^4.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.2.2",
        "@babel/node": "^7.2.2",
        "@babel/plugin-proposal-class-properties": "^7.2.3",
        "@babel/preset-env": "^7.2.3",
        "ava": "^1.4.1",
        "babel-plugin-transform-react-jsx": "^6.24.1",
        "eslint": "^5.12.1",
        "eslint-plugin-react": "^7.12.3",
        "prettier": "^1.15.3"
    },
    "xo": {
        "extends": [
            "xo-react"
        ],
        "rules": {
            "react/no-unused-prop-types": 1,
            "indent": "off",
            "no-unused-vars": "off",
            "semi": "off",
            "arrow-parens": "off",
            "curly": "off",
            "comma-dangle": "off"
        },
        "settings": {
            "react": {
                "pragma": "h"
            }
        }
    }
}
